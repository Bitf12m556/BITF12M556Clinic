@using Clinic.Models
@{
    ViewBag.Title = "SendMsgAdmin";
    
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Contacts- Medical Hospital Website Template</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/jquery-2.1.4.min.js"></script>
    <script src="~/Content/bootstrap.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="body">
        <div class="contact">
            <div>
                <div>
                    <div>
                        <h1>{ Message }</h1>
                        <h4>This is just a place holder</h4>
                        <p>
                            This website template has been designed for you, for free. You can replace all this text with your own text. You can remove any link to our website from this website template, you&#39;re hesitate to ask for help.
                        </p>
                        
                    </div>
                    <div>
                        <div>
                            <h4>Send a message</h4>

                            <form action="Message" method="post">
                                <div class="inputs">
                                    @{
                                        User u = (User)Session["Uemail"];
                                        int i;
                                    }
                                    <label for="name">Your Name:</label>
                                    <input type="text" id="name" name="Name" value="@u.Username" required>

                                    <label for="email">Email Address:</label>
                                    <input type="text" id="email" name="Email" value="@u.Email" required>

                                    <label for="message">Message:</label>
                                    <textarea name="mess" id="message" cols="30" rows="10" required></textarea>

                                    <span>
                                        <button type="submit" id="submit">Send</button>
                                        @*<button type="submit" id="submit" value="Send"></button>*@
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div>
            <div>
                <h4>Contact</h4>
                <p>
                    You can replace all this text with your own text.
                </p>
                <a href="/Home/contacts">Contacts</a>
            </div>
            <div>
                <h4>Links</h4>
                <ul>
                    <li>
                        <a href="/Home/index">Home</a>
                    </li>
                    <li>
                        <a href="/Home/about">About</a>
                    </li>
                    <li>
                        <a href="/Home/service">Services</a>
                    </li>
                    <li>
                        <a href="/Home/doctors">Doctors</a>
                    </li>
                    <li>
                        <a href="/Home/contacts">Contact</a>
                    </li>
                    <li>
                        <a href="/Home/Reports">Reports</a>
                    </li>
                </ul>
            </div>
            <div class="connect">
                <h4>Keep In Touch</h4>
                <a href="http://twitter.com" id="twitter">twitter</a> <a href="http://facebook.com" id="facebook">facebook</a> <a href="http://google.com" id="googleplus">google+</a>
            </div>
        </div>
        <p>
            &#169; Copyright 2015. All rights reserved :P
        </p>
    </div>

</body>
</html>
