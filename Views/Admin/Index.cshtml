@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/AdminLayout.cshtml";
}
@model List<int>
<html>
<head>


    <title>Index - Medical Hospital Website</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link href="~/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/datatables/dataTables.bootstrap.min.js"></script>
    <link href="~/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/Content/jquery-2.1.4.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Welcome To ADMIN Panel</h1>
    <div class="col-xs-3">
        <div class="panel panel-primary panel-success "  >
            <div class="panel panel-heading">
                <div class="panel-title">
                    <h3>Users</h3>
                </div>
            </div>

            <div class="panel-body">
               <h2><strong>@Model[0]</strong></h2>
                <h4>All Users </h4>
            </div>
            <div class="panel-footer">
                <a href="~/Admin/ViewUsers">View All Users</a>
            </div>
        </div>
    </div>

    <div class="col-xs-3" style="border-bottom-left-radius">
        <div class="panel panel-primary panel-success ">
            <div class="panel panel-heading">
                <div class="panel-title">
                    <h3>Doctors</h3>
                </div>
            </div>

            <div class="panel-body">
                <h2><strong>@Model[1]</strong></h2>
                <h4> All Doctors</h4>
            </div>
            <div class="panel-footer">
                <a href="~/Admin/doctors"> View All Doctors</a>
            </div>
        </div>
    </div>

    <div class="col-xs-3">
        <div class="panel panel-primary panel-success ">
            <div class="panel panel-heading">
                <div class="panel-title">
                    <h3>Patients</h3>
                </div>
            </div>

            <div class="panel-body">
                <h2><strong>@Model[2]</strong></h2>
                <h4> All Patients</h4>
            </div>
            <div class="panel-footer">
                <a href="~/Admin/ViewPatients"> View All Patients</a>
            </div>
        </div>
    </div>

</body>

</html>
