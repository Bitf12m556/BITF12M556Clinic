@{
    ViewBag.Title = "AdminLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="background">
        <div class="page">
            <a href="/Home/index"><h1>Clinical System</h1></a>
            <div class="sidebar">
                <ul>
                    <li class="selected"><a href="/Admin/index" class="current">Home</a></li>
                    <li><a href="/Admin/Message">Inbox</a></li>
                    <li><a href="/Admin/SendMsg">Message</a></li>
                    <li><a href="/Admin/about">About Us</a></li>
                    <li><a href="/Admin/service">Services</a></li>
                    <li><a href="/Admin/doctors">View Doctors</a></li>
                    <li><a href="/Admin/ViewPatients">View Patients</a></li>
                    <li><a href="/Admin/ViewUsers">View Users</a></li>
                    <li><a href="/Admin/contacts">Contacts</a></li>
                    <li><a href="/Admin/Reports">Reports</a></li>
                    <li><a href="/Admin/AddPatient">Add Patient</a></li>
                    <li><a href="/Admin/AddDoctor">Add Doctor</a></li>
                    <li><a href="/Admin/UpdatePatient">Update Patient</a></li>
                    <li><a href="/Admin/UpdateDoctor">Update Doctor</a></li>
                    <li><a href="/Admin/DeletePatient">Delete Patient</a></li>
                    <li><a href="/Admin/DeleteDoctor">Delete Doctor</a></li>
                    <li><a href="/Admin/DeleteUser">Delete User</a></li>
                    <li><a href="/Account/SignIn">SignIn</a></li>
                    <li><a href="/Account/SignUp">SignUp</a></li>
                    <li><a href="/Admin/SignOut">SignOut</a></li>
                    
                   


                   

                </ul>

               
                <div class="first">
                    <div>
                        <h3>Welcome Admin</h3>
                        <img src="~/content/themes/base/images/aquib.jpg" height="160" width="160" alt="">

                        <p>
                            We are Proud to Provide Quality health care to Patients
                        </p>
                    </div>
                </div>
                <div>
                    <div>
                        <h3>We are here to Help you</h3>

                        <img src="~/content/themes/base/images/doctors-and-nurse.jpg" alt="">
                        <p>
                            The Clinic had nearly 3.8 million patient encounters for the year ended September 30, 2014, and reported 383,380 unique patients in the Clinic system during this same period.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
